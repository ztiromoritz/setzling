{
  "compilerOptions": {
    "target": "es6",
    "sourceMap": true,
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./build/bundle/",
    "esModuleInterop": true,
    "strict": true,
    "lib": [
      "es2017",
      "dom"
    ],
    "typeRoots": [ "./src/types", "./node_modules/@types" ],

  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**"]
}